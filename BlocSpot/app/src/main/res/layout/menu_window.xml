<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:id="@+id/menu_category_dropdown"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:entries="@array/menu_categories"
        android:textSize="30sp"
        android:background="@color/blueGrey_50"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="4dp"
        android:spinnerItemStyle="@style/spinnerItemStyle"
        android:dropDownWidth="match_parent"
        android:dropDownHeight="400dp"
        android:elevation="2dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/menu_poi_list"
        android:layout_below="@+id/menu_category_dropdown"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blueGrey_100"
        android:layout_gravity="left" />

</RelativeLayout>
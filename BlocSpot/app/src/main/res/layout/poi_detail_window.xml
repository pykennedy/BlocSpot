<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/poi_detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:background="@color/blueGrey_50"
        android:layout_marginBottom="2dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionDone"
            android:layout_weight=".8"
            android:textSize="30sp"
            android:hint="@string/poi_detail_window_title_hint"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".2"
            android:layout_gravity="center_vertical"
            android:text="Enter"/>
    </LinearLayout>


    <Spinner
        android:id="@+id/poi_detail_category_dropdown"
        android:layout_above="@+id/poi_detail_notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/categories"
        android:textSize="30sp"
        android:background="@color/blueGrey_50"
        android:layout_marginBottom="2dp"
        style="@style/spinnerItemStyle"/>

    <EditText
        android:id="@+id/poi_detail_notes"
        android:layout_above="@+id/poi_detail_bottom_buttons"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:hint="@string/poi_detail_window_notes_hint"
        android:background="@color/blueGrey_50"
        android:gravity="top"
        android:textSize="30sp"
        android:lines="5"
        android:maxLength="400"
        android:layout_marginBottom="2dp"/>

    <LinearLayout
        android:id="@+id/poi_detail_bottom_buttons"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Save" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Cancel" />

    </LinearLayout>


</RelativeLayout>